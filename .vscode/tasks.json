{
 
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run workspace startup script",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/on_folder_open.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
  }
  